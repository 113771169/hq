<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
     "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
     "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>

  <!-- admin portlets -->
  <definition name=".admin.home"
              extends=".admin.main.layout">
    <put name="titleKey" value="admin.admin.AdministrationTitle"/>
    <put name="configTile" value="/admin/AdminHome.jsp"/> 
  </definition>


  <definition name=".admin.user.View"
              controllerUrl="/admin/user/View.do"
              path="/admin/user/ViewUser.jsp"/>  
    
  <definition name=".admin.user.new.buttons"
              extends=".form.buttons"/>

  <definition name=".admin.user.page.footer"
              extends=".page.footer"/>

  <definition name=".admin.config.EditConfig"
              controllerUrl="/admin/config/EditConfigPrep.do"
              extends=".admin.main.layout">
    <put name="titleKey" value="admin.settings.EditServerConfig.PageTitle"/>
    <put name="configTile" value="/admin/config/EditServerConfig.jsp"/>
  </definition>

  <definition name=".admin.config.EditMonitorConfig"
              extends=".admin.main.layout"
              controllerUrl="/MonitorDefaultsHelp.do">
    <put name="titleKey" value="admin.home.ResourceTemplates"/>
    <put name="configTile" value="/admin/config/ChangeResourceTemplate.jsp"/>
  </definition>

  <definition name=".admin.auth.functions"
              path="/admin/AuthFunctions.jsp"/>

</tiles-definitions>
