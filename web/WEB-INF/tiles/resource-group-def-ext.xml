<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
     "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
     "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">


<tiles-definitions>

  <definition name=".resource.group.inventory.ViewGroup"
              controllerUrl="/resource/group/inventory/ViewGroup.do"
              path="/resource/group/inventory/ViewGroup.jsp">
  </definition>
  
  <definition name=".tabs.resource.group"
              extends=".tabs.resource"> 
   <putList name="tabList">
       <item value="Monitor" mode="currentHealth"
            link="/resource/group/monitor/Visibility.do"
            height="21" width="102"
            classtype="org.hyperic.hq.ui.util.Tab"/>
      <item value="Inventory" link="/resource/group/Inventory.do"
            height="21" width="102"
            classtype="org.hyperic.hq.ui.util.Tab"/>
      <item value="Control" link="/resource/group/Control.do"
            height="21" width="102"
            classtype="org.hyperic.hq.ui.util.Tab"/>
      <item value="Views" mode="list"
            link="/TabBodyAttach.do"
            height="21" width="102"
            classtype="org.hyperic.hq.ui.util.Tab"/>
   </putList>     
  </definition>
  
  <!-- compatibility groups do not have control -->
    <definition name=".tabs.resource.group.nocontrol"
        extends=".tabs.resource.nocontrol">
     <putList name="tabList">
       <item value="Monitor" mode="currentHealth"
             link="/resource/group/monitor/Visibility.do"
             height="21" width="102" classtype="org.hyperic.hq.ui.util.Tab"/>
       <item value="Inventory" link="/resource/group/Inventory.do"
             height="21" width="102" classtype="org.hyperic.hq.ui.util.Tab"/>
     </putList>     
    </definition>

</tiles-definitions>
