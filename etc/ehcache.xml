<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd">

  <!-- The default cache -->
  <defaultCache maxElementsInMemory="1"
                eternal="false"
                overflowToDisk="false"/>

  <!-- Caching of Derived and Raw Measurements -->
  <cache name="org.hyperic.hq.measurement.server.session.Measurement"
         maxElementsInMemory="10000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Metric data cache, used outside of hibernate -->
  <cache name="MetricDataCache"
         maxElementsInMemory="50000"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- The SRN cache, used outside of hibernate -->
  <cache name="SRNCache"
         maxElementsInMemory="50000"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Platform Type Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType.serverTypesBag"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType.platformBag"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Platform Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.Platform"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform.servers"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform.ips"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Server Type Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.ServerType"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.ServerType.servers"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType.serviceTypes"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Server Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.Server"
         maxElementsInMemory="500"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Server.services"
         maxElementsInMemory="500"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- ServiceType Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.ServiceType"
         maxElementsInMemory="300"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.ServiceType.services"
         maxElementsInMemory="300"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Service Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.Service"
         maxElementsInMemory="5000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="org.hyperic.hq.measurement.server.session.MonitorableType"
         maxElementsInMemory="1000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="Operation.findByTypeAndName"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="ResourceType.findByName"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

</ehcache>
