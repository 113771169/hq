<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd">

  <!-- The default cache -->
  <defaultCache maxElementsInMemory="1"
                eternal="false"
                overflowToDisk="false"/>

  <!-- Timestamp cache for the query cache -->
  <cache name="org.hibernate.cache.UpdateTimestampsCache"
         maxElementsInMemory="5000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"/>

  <!-- Measurement caches -->
  <cache name="org.hyperic.hq.measurement.server.session.Measurement"
         maxElementsInMemory="20000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.measurement.server.session.MeasurementTemplate"
         maxElementsInMemory="20000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.measurement.server.session.MonitorableType"
         maxElementsInMemory="1000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.measurement.server.session.Category"
         maxElementsInMemory="4"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="DerivedMeasurement.findDesignatedByInstanceForCategory"
         maxElementsInMemory="10000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="DerivedMeasurement.findByTemplateForInstance"
         maxElementsInMemory="10000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="Baseline.findByMeasurementId"
         maxElementsInMemory="10000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="CpropKey.findByKey"
         maxElementsInMemory="500"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Metric data cache, used outside of hibernate -->
  <cache name="MetricDataCache"
         maxElementsInMemory="50000"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- The SRN cache, used outside of hibernate -->
  <cache name="SRNCache"
         maxElementsInMemory="50000"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Agent Caches -->
  <cache name="org.hyperic.hq.appdef.Agent"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.AgentType"
         maxElementsInMemory="1"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="Agent.findByAgentToken"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Platform Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.Ip"
         maxElementsInMemory="500"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform.ips"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Server Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.ServerType"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Server"
         maxElementsInMemory="1000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform.servers"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType.serverTypesBag"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Service Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.ServiceType"
         maxElementsInMemory="300"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Service"
         maxElementsInMemory="5000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Server.services"
         maxElementsInMemory="500"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.ServerType.serviceTypes"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Permission related caches -->
  <cache name="org.hyperic.hq.authz.server.session.Resource"
         maxElementsInMemory="5000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="Resource.findByInstanceId"
         maxElementsInMemory="5000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.authz.server.session.ResourceType"
         maxElementsInMemory="10"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.authz.server.session.ResourceType.operationsBag"
         maxElementsInMemory="10"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.authz.server.session.ResourceType.findAll"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="ResourceType.findByName"
         maxElementsInMemory="10"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.authz.server.session.Operation"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="Operation.findByTypeAndName"
         maxElementsInMemory="100"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.authz.server.session.AuthzSubject"
         maxElementsInMemory="20"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="AuthzSubject.findByAuth"
         maxElementsInMemory="20"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="AuthzSubject.findByName"
         maxElementsInMemory="20"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <cache name="PermissionCache"
         maxElementsInMemory="1000"
         timeToIdleSeconds="0"
         timeToLiveSeconds="15"
         memoryStoreEvictionPolicy="LRU"/>

</ehcache>
