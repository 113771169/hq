<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd">

  <!-- The default cache -->
  <defaultCache maxElementsInMemory="1"
                eternal="false"
                overflowToDisk="false"/>

  <!-- Caching of Derived and Raw Measurement pojo's -->
  <cache name="org.hyperic.hq.measurement.server.session.Measurement"
         maxElementsInMemory="1000"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Platform Type Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType.serverTypesBag"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.PlatformType.platformBag"
         maxElementsInMemory="15"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

  <!-- Platform Caches -->
  <cache name="org.hyperic.hq.appdef.server.session.Platform"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform.servers"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>
  <cache name="org.hyperic.hq.appdef.server.session.Platform.ips"
         maxElementsInMemory="50"
         eternal="true"
         timeToIdleSeconds="0"
         timeToLiveSeconds="0"
         memoryStoreEvictionPolicy="LRU"/>

</ehcache>
