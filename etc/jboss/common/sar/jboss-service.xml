<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server>

<server>
  <mbean code="org.hyperic.hq.common.server.mbean.MonitorService"
         name="hyperic.jmx:type=Service,name=Monitor">
  </mbean>

  <mbean code="org.hyperic.hq.common.server.mbean.ProductConfigService"
         name="hyperic.jmx:type=Service,name=ProductConfig">
    <depends>jboss.jca:service=LocalTxCM,name=HypericDS</depends>
  </mbean>

  <mbean code="org.jboss.util.threadpool.BasicThreadPool"
         name="hyperic.jmx:service=HQWorkManagerThreadPool">
    <!-- The name that appears in thread names -->
    <attribute name="Name">HQWorkManager</attribute>
    <!-- The maximum amount of work in the queue -->
    <attribute name="MaximumQueueSize">256</attribute>
    <!-- The maximum number of active threads -->
    <attribute name="MaximumPoolSize">25</attribute>
    <!-- How long to keep threads alive after their last work (default one minute) -->
    <attribute name="KeepAliveTime">5000</attribute>
  </mbean>

</server>
