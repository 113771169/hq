<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.hyperic.hq.appdef">
  <class name="ServiceCluster" table="EAM_SVC_CLUSTER">
    <cache usage="read-write" />
    <id name="id" type="integer">
      <meta attribute="scope-set" inherit="true"><![CDATA[private]]></meta>
      <column name="ID" not-null="true"/>
      <generator class="sequence">
        <param name="sequence">EAM_SVC_CLUSTER_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name="VERSION_COL" default="0"/>
    </version>

    <property name="name" unique="true">
      <column name="NAME" not-null="false" length="200"/>
    </property>

    <property name="sortName">
      <column name="SORT_NAME" not-null="false" length="200"/>
    </property>

    <property name="description">
      <column name="DESCRIPTION" not-null="false" length="200"/>
    </property>

    <many-to-one name="group">
      <column name="GROUP_ID" not-null="false"/>
    </many-to-one>

    <property name="creationTime">
      <column name="CTIME" not-null="false"/>
    </property>

    <property name="modifiedTime">
      <column name="MTIME" not-null="false"/>
    </property>

    <many-to-one name="serviceType">
      <column name="SERVICE_TYPE_ID"/>
    </many-to-one>

    <bag inverse="true" cascade="all" name="appServices" 
         table="EAM_APP_SERVICE">
      <key on-delete="cascade" column="CLUSTER_ID"/>
      <one-to-many class="AppService"/>
    </bag>

    <bag inverse="true" cascade="save-update" name="services" table="EAM_SERVICE">
      <key column="SVC_CLUSTER_ID"/>
      <one-to-many class="org.hyperic.hq.appdef.server.session.Service"/>
    </bag>
  </class>

</hibernate-mapping>
