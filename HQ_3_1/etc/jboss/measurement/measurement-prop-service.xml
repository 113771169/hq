<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server>
<!-- $Id: measurement-prop-service.xml,v 1.2 2004/10/08 01:01:18 dougm Exp $ -->

<server>

  <classpath codebase="lib" 
	     archives="properties-plugin.jar"/>

  <!-- ==================================================================== -->
  <!-- System Properties Service                                            -->
  <!-- ==================================================================== -->

  <!--
     | Allows rich access to system properties.
   -->

  <mbean code="org.jboss.varia.property.SystemPropertiesService" 
	 name="jboss:type=Service,name=MeasurementSystemProperties">

    <!-- 
       | Load properties from each of the given comma seperated URLs

    <attribute name="URLList">
      http://somehost/some-location.properties,
      ./conf/somelocal.properties
    </attribute>

    -->

    <attribute name="Properties">

      covalent-eam.monitor = \
        org.hyperic.hq.measurement.agent.client.AgentMonitor
      local.monitor = \
        org.hyperic.hq.measurement.ext.ProtocolPluginMonitor
      net.covalent.agent.metricDebug = 1

    </attribute>
  </mbean>

</server>
