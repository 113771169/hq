	"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
	<definition name="primaryLayout" template="/WEB-INF/jsp/layout/classic.jsp">
		<put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp" />
		<put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp" />
	</definition>	
	<definition name="login" extends="primaryLayout">
		<put-attribute name="title" value="login.title" />
		<put-attribute name="content" value="/WEB-INF/jsp/login.jsp" />
	</definition>	
</tiles-definitions>