		<put-attribute name="noTitle"  value="true" />
	    <put-list-attribute name="actionList">
		  <add-attribute value=".events.alert.view.notifications"/>
		  <add-attribute value=".events.alert.view.escalation"/>
		</put-list-attribute>
	</definition>

