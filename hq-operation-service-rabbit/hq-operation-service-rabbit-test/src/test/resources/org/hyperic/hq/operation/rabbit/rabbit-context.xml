<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.hyperic.hq.operation.rabbit.core.OperationDiscovererBeanPostProcessor">
        <constructor-arg ref="operationDiscoverer"/>
    </bean>

    <bean id="rabbitConnectionFactory" class="org.hyperic.hq.operation.rabbit.connection.RabbitConnectionFactory"/>

    <bean id="rabbitTemplate" class="org.hyperic.hq.operation.rabbit.core.SimpleRabbitTemplate">
        <constructor-arg index="0" ref="rabbitConnectionFactory"/>
        <constructor-arg index="1" ref="jsonMappingConverter"/>
    </bean>


    <bean id="operationDiscoverer" class="org.hyperic.hq.operation.rabbit.core.AnnotatedOperationDiscoverer">
        <constructor-arg ref="operationRegistry"/>
    </bean>

    <bean id="operationRegistry" class="org.hyperic.hq.operation.rabbit.core.AnnotatedOperationRegistry">
        <constructor-arg index="0" ref="rabbitConnectionFactory"/>
        <constructor-arg index="1" ref="operationRegistry"/>
        <constructor-arg index="2" ref="rabbitErrorHandler"/>
    </bean>

    <bean id="operationToRoutingKeyRegistry" class="org.hyperic.hq.operation.rabbit.core.OperationToRoutingKeyRegistry">
        <constructor-arg index="0" ref="rabbitConnectionFactory"/>
    </bean>

    <bean class="org.hyperic.hq.operation.rabbit.core.AnnotatedOperationService">
        <constructor-arg index="0" ref="rabbitTemplate"/>
        <constructor-arg index="1" ref="operationRegistry"/>
        <constructor-arg index="2" ref="jsonMappingConverter"/>
    </bean>

    <bean id="jsonMappingConverter" class="org.hyperic.hq.operation.rabbit.convert.JsonObjectMappingConverter"/>

    <bean id="rabbitErrorHandler" class="org.hyperic.hq.operation.rabbit.core.RabbitErrorHandler">
        <constructor-arg index="0" ref="rabbitTemplate"/>
    </bean>

</beans>