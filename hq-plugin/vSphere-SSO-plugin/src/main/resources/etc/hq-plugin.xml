
<!DOCTYPE plugin [
  <!ENTITY process-metrics SYSTEM "/pdk/plugins/process-metrics.xml">
]>

<plugin name="vSphere-SSO" package="org.hyperic.plugin.vrealize.automation">
    <property name="PLUGIN_VERSION" value="@project.version@" />

    <server name="vSphere SSO" version="5.5 (Linux)" platforms="Linux">
        <property name="PROC_QUERY"
                  value="State.Name.eq=java,Args.*.re=(/vmware-sts/|vmware-sso)" />

        <config>
            <option name="process.query" default="${PROC_QUERY}"
                    description="PTQL for vSphere SSO" />
            <option name="extended-relationship-model" default=""
                    description="Extended Hyperic resource relationshsip model." />            
			<option name="port"
					default="7444"
                    description="vSphere SSO port"/>
        </config>

        <plugin type="autoinventory" class="DiscoveryVSphereSSO" />

        <plugin type="measurement" class="org.hyperic.hq.product.MeasurementPlugin" />

        <!--notifies the plugin to auto-discover one instance of each service -->
        <property name="HAS_BUILTIN_SERVICES" value="true" />

        <property name="AUTOINVENTORY_NAME" value="%platform.name% vSphere SSO" />

        <metric name="Availability"
                template="HTTP:hostname=localhost,port=%port%,ssl=true,path=/sts/STSService?wsdl,method=GET,follow=true:Availability"
                category="AVAILABILITY" units="percentage" indicator="true"
                collectionType="dynamic" defaultOn="true" interval="300000" />

        <metric name="STS Service URL Availability"
                template="HTTP:hostname=localhost,port=%port%,ssl=true,path=/sts/STSService?wsdl,method=GET,follow=true:Availability"
                category="PERFORMANCE" units="percentage" indicator="true"
                collectionType="dynamic" defaultOn="true" interval="300000" />

        <metric name="STS Service URL Response Time"
                template="HTTP:hostname=localhost,port=%port%,ssl=true,path=/sts/STSService?wsdl,method=GET,follow=true:ResponseTime"
                category="PERFORMANCE" units="ms" indicator="true"
                collectionType="dynamic" defaultOn="true" interval="300000" />

        <metric name="websso URL Availability"
                template="HTTP:hostname=localhost,port=%port%,ssl=true,path=/websso/HealthStatus,method=GET,follow=true,pattern=GREEN:Availability"
                category="PERFORMANCE" units="percentage" indicator="true"
                collectionType="dynamic" defaultOn="true" interval="300000" />

        <metric name="websso URL Response Time"
                template="HTTP:hostname=localhost,port=%port%,ssl=true,path=/websso/HealthStatus,method=GET,follow=true,pattern=GREEN:ResponseTime"
                category="PERFORMANCE" units="ms" indicator="true"
                collectionType="dynamic" defaultOn="true" interval="300000" />

        <service name="VMware Secure Token Service">
