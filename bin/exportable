#!/bin/bash

DEBUG=

basedir=`dirname $0`
this_script=`basename $0`

JAVA_HOME="/usr/jdk/latest"
LIB="$basedir/../thirdparty/lib"
DBUNIT_PKGS="${LIB}/dbunit-2.2.jar"
PG_PKGS=${LIB}/oracle_jdbc/oracle12.jar 
ORA_PKGS=${LIB}/postgresql/postgresql-8.2-505.jdbc3.jar 
MYSQL_PKGS=${LIB}/mysql_jdbc/mysql-connector-java-5.0.5-bin.jar 
DB_PKGS="${PG_PKGS}:${ORA_PKGS}:${MYSQL_PKGS}"
DRIVER="org.postgresql.Driver"
#DRIVER="com.mysql.jdbc.Driver"
#DRIVER="oracle.jdbc.OracleDriver"
PKGS="${DB_PKGS}:${DBUNIT_PKGS}:$basedir/../build/hq.ear/hq.jar"
ARGS="-Djdbc.drivers=${DRIVER} -cp ${PKGS}"
JAVA="${JAVA_HOME}/bin/java"

lflag=1
url="jdbc:postgresql://localhost:5432/hqdb?protocolVersion=2"
uflag=
pflag=
tflag=

usage()
{
    printf "Usage: %s -l <url> -u <user> -p <passwd> -t <tables comma separated> -d <dest dir>\n"  $this_script
    printf "default url = $url\nexample urls:\nmysql = jdbc:mysql://localhost:3306/hqdb\noracle = jdbc:oracle:thin:@localhost:1521:orcl\n"
}

while getopts 'd:p:l:u:t:' name
do
     case $name in
     p)     pflag=1
            passwd="$OPTARG";;
     l)     lflag=1
            url="$OPTARG";;
     u)     uflag=1
            user="$OPTARG";;
     t)     tflag=1
            tables="$OPTARG";;
     d)     dest="--dest $OPTARG";;
     ?)     usage;
            exit 2;;
     esac
done
if [ ! -z "$lflag" ]; then
   [ "$DEBUG" ] && printf "Option --url $url specified\n"
else
    usage;
    exit 2
fi
if [ ! -z "$uflag" ]; then
   [ "$DEBUG" ] && printf "Option --user $user specified\n"
else
    usage;
    exit 2
fi
if [ ! -z "$tflag" ]; then
   [ "$DEBUG" ] && printf "Option --tables specified\n"
else
    usage;
    exit 2
fi
if [ ! -z "$pflag" ]; then
   [ "$DEBUG" ] && printf "Option --passwd specified\n"
else
    usage;
    exit 2
fi

${JAVA} ${ARGS} org.hyperic.util.unittest.util.TableExport --url $url --passwd $passwd --user $user --tables $tables $dest
