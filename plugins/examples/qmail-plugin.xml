<plugin>
  <!-- extracted to: pdk/work/scripts/qmail/hq-qmail-qstat -->
  <script name="hq-qmail-qstat">
#!/bin/sh

#modified version of /var/qmail/bin/qmail-qstat
#same logic, only the format of the two echo statements differ

cd /var/qmail
messdirs=`echo queue/mess/* | wc -w`
messfiles=`find queue/mess/* -print | wc -w`
tododirs=`echo queue/todo | wc -w`
todofiles=`find queue/todo -print | wc -w`
echo MessagesInQueue=`expr $messfiles - $messdirs`
echo MessagesAwaitingPreprocessing=`expr $todofiles - $tododirs`
  </script>

  <server name="qmail" description="MTA">

    <config>
      <option name="process.query"
              description="Process Query"
              default="State.Name.eq=qmail-send"/>
    </config>

    <plugin type="measurement"
            class="org.hyperic.hq.product.MeasurementPlugin"/>

    <!-- process metrics -->
    <metric name="Availability"
            template="sigar.ptql:Type=ProcState,Arg=$!:State:%process.query%"
            indicator="true"/>

    <metric name="Process Virtual Memory Size"
            template="sigar.ptql:Type=ProcMem,Arg=$!:Size:%process.query%"
            units="B"/>

    <metric name="Process Resident Memory Size"
            template="sigar.ptql:Type=ProcMem,Arg=$!:Resident:%process.query%"
            indicator="true"
            units="B"/>

    <metric name="Process Cpu System Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:Stime:%process.query%"
            units="sec"
            collectionType="trendsup"/>

    <metric name="Process Cpu User Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:Utime:%process.query%"
            units="sec"
            collectionType="trendsup"/>

    <metric name="Process Cpu Total Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:Total:%process.query%"
            units="sec"
            collectionType="trendsup"/>

    <metric name="Process Cpu Usage"
            template="sigar.ptql:Type=ProcCpu,Arg=$!:Percent:%process.query%"
            indicator="true"
            units="percentage"/>

    <metric name="Process Start Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:StartTime:%process.query%"
            category="AVAILABILITY"
            units="epoch-millis"
            collectionType="static"/>

    <metric name="Process Open File Descriptors"
            template="sigar.ptql:Type=ProcFd,Arg=$!:Total:%process.query%"/>

    <metric name="Process Threads"
            template="sigar.ptql:Type=ProcState,Arg=$!:Threads:%process.query%"/>

    <!-- qmail-qstat metrics -->
    <filter name="template"
            value="exec:file=pdk/work/scripts/qmail/hq-qmail-qstat,exec=sudo:${alias}"/>

    <metric name="Messages In Queue"
            indicator="true"/>

    <metric name="Messages Awaiting Preprocessing"
            indicator="true"/>

    <!-- protocol services+metrics -->
    <service name="SMTP">
      <config>
        <option name="hostname"
                description="SMTP Hostname"
                default="localhost"/>
      </config>

      <filter name="template"
              value="SMTP:hostname=%hostname%:${alias}"/>

      <metric name="Availability"
              indicator="true"/>

      <metric name="Inbound Connections"
              indicator="true"/>

      <metric name="Outbound Connections"
              indicator="true"/>
    </service>

    <service name="POP3">
      <config>
        <option name="hostname"
                description="POP3 Hostname"
                default="localhost"/>
      </config>

      <filter name="template"
              value="POP3:hostname=%hostname%:${alias}"/>

      <metric name="Availability"
              indicator="true"/>

      <metric name="Inbound Connections"
              indicator="true"/>

      <metric name="Outbound Connections"
              indicator="true"/>
    </service>

  </server>

</plugin>
