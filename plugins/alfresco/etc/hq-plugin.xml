<plugin package="org.hyperic.hq.plugin.alfresco">

  <server name="Alfresco"
          version="4.5.x">

    <plugin type="autoinventory"
            class="AlfrescoServerDetector"/>
    <plugin type="measurement"
            class="org.hyperic.hq.product.MeasurementPlugin"/>
    <plugin type="collector"
            class="org.hyperic.hq.plugin.alfresco.AlfrescoCollector"/>

    <filter name="template"
            value="alfresco-stats:installpath=%installpath%:${alias}"/>

    <config>
      <option name="installpath"
              default="/opt/alfresco"
              description="Alfresco Install Path"/>
      <option name="alfresco-ptql"
              default="State.name.eq=java,args.re='.*alfresco.*'"
              description="Sigar PTQL Process Query"/>
    </config>

    <metric name="Availability"
            template="sigar:Type=ProcState,Arg=%alfresco-ptql%:State"
            indicator="true"/>

    <metric name="Transactions"
            category="THROUGHPUT"
            indicator="true"
            collectionType="trendsup"
            units="none"/>

    <metric name="Users"
            category="UTILIZATION"
            indicator="true"
            collectionType="static"
            units="none"/>

    <service name="Lucene Indexes">
      <plugin type="autoinventory"
              class="AlfrescoServerDetector"/>
      <config>
        <option name="protocol"
                description="Index Protocol"/>
        <option name="identifier"
                description="Index Identifier"/>
      </config>
      <filter name="template">
        alfresco:Type=luceneindex,protocol=%protocol%,identifier=%identifier%:${alias}
      </filter>
      <metric name="Index Size"
              category="UTILIZATION"
              indicator="true"
              collectionType="dynamic"
              units="KB"/>
    </service>

    <service name="Database Backend">
      <plugin type="autoinventory"
              class="AlfrescoServerDetector"/>
      <config>
        <option name="process.query"
                default="State.name.eq=mysql"
                description="PTQL for Alfresco Database Backend"/>
      </config>
      <metric name="Availability"
              template="sigar:Type=ProcState,Arg=%process.query%:State"
              indicator="true"/>
      &process-metrics;
    </service>

    <service name="Tomcat">
      <config>
        <option name="process.query"
                default="State.name.eq=java,Args='.*alfresco.*'"
                description="PTQL for Alfresco Tomcat"/>
      </config>
      <metric name="Availability"
              template="sigar:Type=ProcState,Arg=%process.query%:State"
              indicator="true"/>
      &process-metrics;
    </service>

    <service name="HTTP">
      <filter name="template"
              value="HTTP:hostname=localhost:${alias}"/>

      <metric name="Availability"
              indicator="true"/>

      <metric name="Inbound Connections"
              indicator="true"/>

      <metric name="Outbound Connections"
              indicator="true"/>
    </service>

  </server>
  <!-- ==================== Plugin Help =========================== -->
  <help name="Alfresco">
    <![CDATA[
    <p>
    </p>
    ]]>
  </help>
</plugin>
