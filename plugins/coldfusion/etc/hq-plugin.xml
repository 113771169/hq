<plugin package="org.hyperic.hq.plugin.coldfusion">

  <server name="Coldfusion"
          version="7.x">

    <plugin type="autoinventory"
            class="ColdfusionServerDetector"/>
    <plugin type="measurement"
            class="org.hyperic.hq.plugin.coldfusion.ColdfusionMeasurementPlugin"/>

    <config>
      <option name="installpath"
              default="/opt/coldfusionmx7"
              description="Coldfusion Install Path"/>
      <option name="coldfusion-ptql"
              default="State.Name.re=cfmx7|java,Args.*.ct=coldfusion,State.Name.Pne=$1"
              description="Sigar PTQL Process Query"/>
    </config>

    <metric name="Availability"
            template="sigar:Type=ProcState,Arg=%coldfusion-ptql%:State"
            indicator="true"/>

    <filter name="template"
            value="coldfusion-stats:installpath=%installpath%:${alias}"/>

    <metric name="Threads listening for a new connection"
            alias="listenTh"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Threads waiting for a new request"
            alias="idleTh"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Threads waiting to run"
            alias="delayTh"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Threads currently running"
            alias="busyTh"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Total worker thread count"
            alias="totalTh"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Requests delayed due to high concurrency"
            alias="delayRq"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Requests dropped"
            alias="droppedRq"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Requests handled"
            alias="handledRq"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Milliseconds spent servicing requests not including any delay time (delayMs)"
            alias="handledMs"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="ms"/>
    <metric name="Milliseconds spent in delay state"
            alias="delayMs"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="ms"/>
    <metric name="Bytes read from request"
            alias="bytesIn"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="B"/>
    <metric name="Bytes written to response"
            alias="bytesOut"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="B"/>
    <metric name="Kilobytes of free memory in the heap"
            alias="freeMemory"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="KB"/>
    <metric name="Total Kilobytes in the heap (in use and free)"
            alias="totalMemory"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="KB"/>
    <metric name="Current number of active J2EE sessions"
            alias="sessions"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Number of J2EE sessions in memory"
            alias="sessionsInMem"
            category="UTILIZATION"
            indicator="true"
            collectionType="dynamic"
            units="none"/>

    <service name="HTTP">
      <config include="http"/>
      <filter name="template"
              value="${http.template}:${alias}"/>

      <metric name="Availability"
              indicator="true"/>

      <metric name="Inbound Connections"
              indicator="true"/>

      <metric name="Outbound Connections"
              indicator="true"/>
    </service>
  </server>

  <!-- ==================== Plugin Help =========================== -->
  <help name="Coldfusion">
  <![CDATA[
  <p>
  <h3>Configure HQ for monitoring Coldfusion</h3>
  </p>
  <p>
  To enable Coldfusion metric logging follow these instructions:
  http://kb.adobe.com/selfservice/viewContent.do?externalId=tn_19120&sliceId=2
  </p>
  ]]>
  </help>
</plugin>
