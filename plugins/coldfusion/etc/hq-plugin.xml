<plugin package="org.hyperic.hq.plugin.coldfusion">

  <server name="Coldfusion"
          version="7.x">

    <property name="DEFAULT_LOG_FILE"
              value="logs/server.log"/>
    <plugin type="log_track"
            class="org.hyperic.hq.product.Log4JLogTrackPlugin"/>

    <plugin type="autoinventory"
            class="ColdfusionServerDetector"/>
    <plugin type="measurement"
            class="org.hyperic.hq.product.MeasurementPlugin"/>
    <plugin type="collector"
            class="org.hyperic.hq.plugin.coldfusion.ColdfusionCollector"/>

    <config>
      <option name="installpath"
              default="/opt/coldfusionmx7"
              description="Coldfusion Install Path"/>
      <option name="coldfusion-ptql"
              default="State.Name.re=cfmx7|java,Args.*.ct=coldfusion,State.Name.Pne=$1"
              description="Sigar PTQL Process Query"/>
    </config>

    <metric name="Availability"
            template="sigar:Type=ProcState,Arg=%coldfusion-ptql%:State"
            indicator="true"/>

    <filter name="template"
            value="coldfusion-stats:installpath=%installpath%:${alias}"/>

    <metric name="Threads listening for a new connection"
            alias="listenTh"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>
    <metric name="Threads waiting for a new request"
            alias="idleTh"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>
    <metric name="Threads waiting to run"
            alias="delayTh"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>
    <metric name="Threads currently running"
            alias="busyTh"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Total worker threads"
            alias="totalTh"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>
    <metric name="Requests delayed due to high concurrency"
            alias="delayRq"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Requests dropped"
            alias="droppedRq"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"
            units="none"/>
    <metric name="Requests handled"
            alias="handledRq"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>
    <metric name="Time servicing requests not including any delay time"
            alias="handledMs"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"
            units="ms"/>
    <metric name="Time spent in delay state"
            alias="delayMs"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"
            units="ms"/>
    <metric name="Data read from request"
            alias="bytesIn"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="B"/>
    <metric name="Data written to response"
            alias="bytesOut"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="B"/>
    <metric name="Free heap memory"
            alias="freeMemory"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="KB"/>
    <metric name="Total memory in the heap (in use and free)"
            alias="totalMemory"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="KB"/>
    <metric name="Active J2EE sessions"
            alias="sessions"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>
    <metric name="J2EE sessions in memory"
            alias="sessionsInMem"
            category="THROUGHPUT"
            indicator="false"
            collectionType="dynamic"
            units="none"/>

    <service name="HTTP">
      <config include="http"/>
      <filter name="template"
              value="${http.template}:${alias}"/>

      <metric name="Availability"
              indicator="true"/>

      <metric name="Inbound Connections"
              indicator="true"/>

      <metric name="Outbound Connections"
              indicator="true"/>
    </service>

    <service name="Java Process Metrics">
      <config>
        <option name="process.query"
                default="%coldfusion-ptql%"
                description="PTQL for Coldfusion Java Process"/>
      </config>
      <metric name="Availability"
              template="sigar:Type=ProcState,Arg=%process.query%:State"
              indicator="true"/>
      &process-metrics;
    </service>
  </server>

  <!-- ==================== Plugin Help =========================== -->
  <help name="Coldfusion">
  <![CDATA[
  <p>
  <h3>Configure HQ for monitoring Coldfusion</h3>
  </p>
  <p>
  To enable Coldfusion metric logging follow these instructions:
  http://kb.adobe.com/selfservice/viewContent.do?externalId=tn_19120&sliceId=2
  <br>
  Here is sample of what the log file should look like (all the important
  <br>
  attributes are listed).
  <br>
  For HQ metric collection to work properly, the name/value pair must be specified
  <br>
  as follows (may span multiple lines or not).
  <br>
  Look for:
  <br>
  &lt;!-- ================================================================== --&gt;
  <br>
  &lt;!-- This Service represents JRun's logging facility                    --&gt;
  <br>
  &lt;!-- ================================================================== --&gt;
  <br>
  Then change:
  <br>
    &lt;attribute name="metricsEnabled"&gt;true&lt;/attribute&gt;
  <br>
    &lt;attribute name="metricsLogFrequency"&gt;300&lt;/attribute&gt;
  <br>
    &lt;attribute name="metricsFormat"&gt;
  <br>
      listenTh={listenTh}
  <br>
      idleTh={idleTh}
  <br>
      delayTh={delayTh}
  <br>
      busyTh={busyTh}
  <br>
      totalTh={totalTh}
  <br>
      delayRq={delayTh}
  <br>
      droppedRq={droppedRq}
  <br>
      handledRq={handledRq}
  <br>
      handledMs={handledMs}
  <br>
      delayMs={delayMs}
  <br>
      bytesIn={bytesIn}
  <br>
      bytesOut={bytesOut}
  <br>
      freeMemory={freeMemory}
  <br>
      totalMemory={totalMemory}
  <br>
      sessions={sessions}
  <br>
    &lt;/attribute&gt;
  </p>
  ]]>
  </help>
  <help name="Coldfusion 7.x" include="Coldfusion"/>
</plugin>
