<plugin package="org.hyperic.hq.plugin.informix">
  <classpath>
    <include name="pdk/lib/jdbc/ifxjdbc.jar"/>
  </classpath>

  <!-- we use a dummy jmx object name -->
  <filter name="domain" value="informix"/>

  <!-- appended to each template by MeasurementInfoXML -->
  <property name="template-config"
            value="jdbcUrl=%jdbcUrl%,jdbcUser=%jdbcUser%,jdbcPassword=%jdbcPassword%"/>

  <filter name="template"
          value="${domain}:Type=Server:${alias}"/>
  <metrics name="Server">
    <metric name="Availability"
            category="AVAILABILITY"
            indicator="true"
            units="percentage"
            collectionType="dynamic"/>

    <metric name="Total Number of Lock Waits"
            alias="TotNumLocksWaits"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>

    <metric name="Total Number of Dead Locks"
            alias="TotNumDeadLocks"
            category="THROUGHPUT"
            collectionType="dynamic"/>

    <metric name="Total Number of Users Waiting For Locks"
            alias="TotNumUserWaitLocks"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>

  </metrics>

  <filter name="template"
          value="${domain}:Type=DBSpace,chunk=%chunk%:${alias}"/>
  <metrics name="DBSpace">
<!--
    <metric name="Availability"
            category="AVAILABILITY"
            indicator="true"
            units="percentage"
            collectionType="dynamic"/>

    <metric name="Space Available"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>

    <metric name="Chunk IO Writes"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>

    <metric name="Chunk IO Reads"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>
-->
  </metrics>

  <filter name="template"
          value="${domain}:Type=Table,dbname=%dbname%,table=%table%:${alias}"/>
  <metrics name="Table">
<!--
    <metric name="Availability"
            category="AVAILABILITY"
            indicator="true"
            units="percentage"
            collectionType="dynamic"/>

    <metric name="Number of Lock Waits"
            alias="NumLocksWaits"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>

    <metric name="Number of Users Waiting For Locks"
            alias="NumUserWaitLocks"
            category="THROUGHPUT"
            indicator="true"
            collectionType="dynamic"/>

    <metric name="Number of Dead Locks"
            alias="NumDeadLocks"
            category="THROUGHPUT"
            collectionType="dynamic"/>

    <metric name="Number of Active Locks"
            alias="NumActiveLocks"
            category="UTILIZATION"
            collectionType="dynamic"/>
-->
  </metrics>

  <server name="Informix" 
          version="10.0">

    <plugin type="measurement"
            class="InformixMeasurementPlugin"/>

    <property name="port"
              value="3500"/>

    <property name="servername"
              value="test_shm"/>

    <property name="hostname"
              value="localhost"/>

    <metrics include="Server"/>

    <properties>
       <property name="version"
                 description="Informix Version"/>
    </properties>

<!--
    <config>
      <option name="jdbcUrl"
              description="JDBC Connection URL"
              default="jdbc:informix-sqli://vmlin-002:3500/sysmaster:informixserver=test_shm"/>
      <option name="jdbcUser"
              description="JDBC User"
              default="informix"/>
      <option name="jdbcPassword" type="secret"
              optional="true"
              description="JDBC Password"/>
    </config>
-->

    <service name="Table">
      <plugin type="measurement"
              class="InformixMeasurementPlugin"/>
      <config>
        <option name="dbname"
                description="Database Name"/>
        <option name="table"
                description="Table Name"/>
      </config>
      <metrics include="Table"/>
    </service>

    <service name="DBSpace">
      <plugin type="measurement"
              class="InformixMeasurementPlugin"/>
      <config>
        <option name="chunk"
                description="Data Chunk Name"/>
      </config>
      <metrics include="DBSpace"/>
    </service>

<!--
    <scan registry="SYSTEM\CurrentControlSet\Services\pgsql-*">
      <include name="ImagePath"/>
    </scan>
    <scan registry="SYSTEM\CurrentControlSet\Services\hyperic-hq-database"/>
    <scan type="file">
      <include name="/**/bin/postgres"/>
    </scan>
-->

  </server>
</plugin>
