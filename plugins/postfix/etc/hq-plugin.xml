<plugin package="org.hyperic.hq.plugin.postfix">
  <filter name="domain" value="postfix"/>

  <!-- Process metrics -->
  <metrics name="process">
    <metric name="Availability"
            template="sigar.ptql:Type=ProcState,Arg=$!:State:%process.query%"
            indicator="true"/>

    <metric name="Virtual Memory Size"
            template="sigar.ptql:Type=ProcMem,Arg=$!:Size:%process.query%"
            units="B"/>

    <metric name="Resident Memory Size"
            template="sigar.ptql:Type=ProcMem,Arg=$!:Resident:%process.query%"
            units="B"
            collectionType="dynamic"/>

    <metric name="Cpu System Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:Stime:%process.query%"
            units="sec"
            collectionType="trendsup"/>

    <metric name="Cpu User Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:Utime:%process.query%"
            units="sec"
            collectionType="trendsup"/>

    <metric name="Cpu Total Time"
            template="sigar.ptql:Type=ProcTime,Arg=$!:Total:%process.query%"
            units="sec"
            collectionType="trendsup"/>

    <metric name="Cpu Usage"
            template="sigar.ptql:Type=ProcCpu,Arg=$!:Percent:%process.query%"
            indicator="true"
            units="percentage"/>

    <metric name="Open File Descriptors"
            template="sigar.ptql:Type=ProcFd,Arg=$!:Total:%process.query%"/>
  </metrics>
  <metrics name="queue-avail">
    <metric name="Availability"
            template="system.avail:Type=FileInfo,Arg=%path%:Type"
            indicator="true"/>
  </metrics>

  <metrics name="queue">
    <metric name="Queued Messages"
            template="queue:path=%path%:${alias}"
            indicator="true"/>

    <metric name="Queue Size"
            template="queue:path=%path%:${alias}"
            units="B"/>
  </metrics>

  <help name="postfix">
    <![CDATA[
    <p>
    <h3>Configure Postfix ${product.version} for Monitoring</h3>
    </p>
    <p>
    The HQ Agent must be running as root or a user with sufficient privileges
    to read the mail queues.
    </p>
    ]]>
  </help>  

  <server name="Postfix" 
          version="2.x"
          platforms="Unix">

    <plugin type="measurement"
            class="PostfixMeasurementPlugin"/>

    <plugin type="autoinventory"
            class="PostfixServerDetector"/>

    <config>
      <option name="process.query"
              description="Process query for post master"
              default="State.Name.eq=master"/>
      <option name="postconf"
              description="location of the postconf binary"
              default="/usr/sbin/postconf"/>
      <option name="configDir"
              description="config directory (path to main.cf)"
              default="/etc/postfix"/>
    </config>

    <metrics include="process"/>

    <help include="postfix"/>

    <service name="Queue">
      <plugin type="measurement"
              class="PostfixMeasurementPlugin"/>

      <config>
        <option name="queue"
                description="Queue Name"/>
        <option name="path"
                description="full path to the queue"/>
      </config>

      <metrics include="queue-avail,queue"/>
    </service>

  </server>

</plugin>
