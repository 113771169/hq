<filter name="JGroupsChannel"
        value="JGroups:channel=%channel%"/>

<config name="JGroupsChannel">
  <option name="channel"
          description="Channel Name"
          default=""/>
</config>

<service name="JGroups Channel">
  <property name="OBJECT_NAME"
            value="${JGroupsChannel}"/>

  <plugin type="autoinventory"/>    

  <config include="JGroupsChannel"/>

  <metric name="Availability"
          template="${OBJECT_NAME}:Connected"
          indicator="true"/>

  <metric name="Number of Messages"
          template="${OBJECT_NAME}:NumMessages"
          category="THROUGHPUT"
          indicator="true"
          collectionType="trendsup"/>

  <metric name="Sent Messages"
          template="${OBJECT_NAME}:SentMessages"
          category="THROUGHPUT"
          indicator="true"
          collectionType="trendsup"/>

  <metric name="Sent Bytes"
          template="${OBJECT_NAME}:SentBytes"
          category="THROUGHPUT"
          indicator="true"
          units="B"
          collectionType="trendsup"/>

  <metric name="Received Bytes"
          template="${OBJECT_NAME}:ReceivedBytes"
          category="THROUGHPUT"
          indicator="true"
          units="B"
          collectionType="trendsup"/>
</service>
