<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.escalation.server.session">
  <class name="MEscalationState" table="EAM_MESCALATION_STATE">

    <id name="id" type="integer">
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_MESCALATION_STATE_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <property name="nextAction">
      <column name="NEXT_ACTION_IDX" not-null="true" />
    </property>

    <property name="nextActionTime">
      <column name="NEXT_ACTION_TIME" not-null="true" />
    </property>

    <many-to-one name="escalation">
      <column name="MESCALATION_ID" not-null="true" unique-key="escl_uniq"/>
    </many-to-one>

    <property name="alertTypeEnum">
      <column name="ALERT_TYPE" not-null="true" index="state_idx"
              unique-key="escl_uniq"/>
    </property>

    <property name="alertDefinitionId">
      <column name="ALERT_DEF_ID" not-null="true" index="state_idx"
              unique-key="escl_uniq"/>
    </property>

    <property name="alertId">
      <column name="ALERT_ID" not-null="true" unique-key="escl_uniq"/>
    </property>

    <many-to-one name="acknowledgedBy">
      <column name="ACKNOWLEDGED_BY" not-null="false"/>
    </many-to-one>
  </class>
</hibernate-mapping>
