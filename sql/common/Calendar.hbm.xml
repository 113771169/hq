<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.common.server.session">
  <class name="Calendar" table="EAM_CALENDAR">

    <cache usage="read-write" />

    <id name="id" type="integer">
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_CALENDAR_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name="VERSION_COL" default="0" />
    </version>

    <property name="name" unique="true">
      <column name="NAME" not-null="true" unique-key="calendar_name_idx"/>
    </property>

    <bag name="entriesBag" table="EAM_CALENDAR_ENT" cascade="all-delete-orphan"
         inverse="true" lazy="false">
      <cache usage="read-write"/>
      <key column="CALENDAR_ID" />
      <one-to-many class="CalendarEntry"/>
    </bag>
  </class>
</hibernate-mapping>
