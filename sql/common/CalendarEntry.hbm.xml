<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.common.server.session">
  <class name="CalendarEntry" table="EAM_CALENDAR_ENT">

    <cache usage="read-write" />

    <id name="id" type="integer">
      <column name="ID" not-null="true" />
      <generator class="org.hyperic.hibernate.id.ComboGenerator">
        <param name="sequence">EAM_CALENDAR_ENT_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name="VERSION_COL" default="0" />
    </version>

    <many-to-one name="calendar">
      <column name="CALENDAR_ID" index="CALENDAR_ID_IDX" not-null="true"/>
    </many-to-one>
    
    <joined-subclass name="WeekEntry" table="EAM_CALENDAR_WEEK">
      <key column="CALENDAR_WEEK_ID"/>
      
      <property name="weekDay"   not-null="true"/>
      <property name="startTime" not-null="true"/>
      <property name="endTime"   not-null="true"/>
    </joined-subclass>
  </class>
</hibernate-mapping>
