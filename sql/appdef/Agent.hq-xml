<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
  package="org.hyperic.hq.appdef.shared.pojo">

  <class name="Agent" table="EAM_AGENT">
    <id name="id" type="integer">
      <meta attribute="scope-set">private</meta>
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_AGENT_ID_SEQ</param>
      </generator>
    </id>

    <natural-id>
      <property name="address" type="string">
        <column name="ADDRESS" index="AGENT_ADDRESS_PORT" not-null="true" length="64" />
      </property>
      <property name="port" type="integer">
        <column name="PORT" index="AGENT_ADDRESS_PORT" not-null="true" />
      </property>
    </natural-id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <property name="authToken" type="string">
      <column name="AUTHTOKEN" not-null="true" length="100" />
    </property>

    <property name="agentToken" unique="true" type="string">
      <column name="AGENTTOKEN" index="AGENT_TOKEN_UNIQUE" not-null="true" length="100" />
    </property>

    <property name="version" type="string">
      <column name="VERSION" length="20" />
    </property>

    <property name="ctime" type="long">
      <column name="CTIME" />
    </property>

    <property name="mtime" type="long">
      <column name="MTIME" />
    </property>

    <many-to-one name="agentTypeId" class="AgentType">
      <column name="AGENT_TYPE_ID" not-null="false" />
    </many-to-one>

    <bag name="platforms" table="EAM_PLATFORM" lazy="true">
      <key column="AGENT_ID" />
      <one-to-many class="Platform" />
    </bag>
  </class>

</hibernate-mapping>
