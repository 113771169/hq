<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
  package="org.hyperic.hq.appdef">

  <class name="Agent" table="EAM_AGENT">
    <cache usage="read-write"/>

    <id name="id" type="integer">
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_AGENT_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <properties name="agentId" unique="true">
      <property name="address" type="string">
        <column name="ADDRESS" not-null="true" length="64" />
      </property>
      <property name="port" type="integer">
        <column name="PORT" not-null="true" />
      </property>
    </properties>

    <property name="authToken" type="string">
      <column name="AUTHTOKEN" not-null="true" length="100" />
    </property>

    <property name="agentToken" type="string">
      <column name="AGENTTOKEN" not-null="true" length="100" unique="true" index="AGENT_TOKEN_IDX" />
    </property>

    <property name="version" type="string">
      <column name="VERSION" length="20" />
    </property>

    <property name="creationTime" type="long">
      <column name="CTIME" />
    </property>

    <property name="modifiedTime" type="long">
      <column name="MTIME" />
    </property>

    <many-to-one name="agentType" class="AgentType">
      <column name="AGENT_TYPE_ID" not-null="false" />
    </many-to-one>

    <bag name="platforms" table="EAM_PLATFORM" lazy="true">
      <key column="AGENT_ID" />
      <one-to-many class="org.hyperic.hq.appdef.server.session.Platform" />
    </bag>
  </class>

</hibernate-mapping>
