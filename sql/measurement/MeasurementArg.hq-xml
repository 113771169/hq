<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.measurement">

  <class name="MeasurementArg" table="EAM_MEASUREMENT_ARG">

    <id name="id" type="integer">
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_MEASUREMENT_ARG_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name="VERSION_COL" default="0" />
    </version>

    <property name="cid" type="integer">
      <column name="CID" />
    </property>

    <property name="placement" type="integer">
      <column name="PLACEMENT" not-null="true" />
    </property>

    <property name="ticks" type="integer">
      <column name="TICKS"  default="0" />
    </property>

    <property name="weight" type="float">
      <column name="WEIGHT" default="0" />
    </property>

    <property name="previous" type="integer">
      <column name="PREVIOUS" default="0" />
    </property>

    <many-to-one name="template" class="MeasurementTemplate">
      <column name="MEASUREMENT_TEMPLATE_ID" index="MEASUREMENT_ARG_TEMPL_IDX" />
    </many-to-one>

    <!-- uni-directional lookup for template, only derived measurements have args defined -->
    <many-to-one name="templateArg" fetch="join" class="MeasurementTemplate">
      <column name="MEASUREMENT_TEMPLATE_ARG_ID" index="MEASUREMENT_ARG_IDX" />
    </many-to-one>
  </class>

</hibernate-mapping>
