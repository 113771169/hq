<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
  package="org.hyperic.hq.authz.server.session">

  <class name="AuthzSubject" table="EAM_SUBJECT">
    <id name="id" type="integer">
      <meta attribute="scope-set">private</meta>
      <column name="ID" not-null="true" />
      <generator class="sequence">
        <param name="sequence">EAM_SUBJECT_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <properties name="subjNameByDsn" unique="true">
      <property name="name" type="string">
        <column name="NAME" not-null="true" length="100" />
      </property>

      <property name="authDsn" type="string">
        <column name="DSN" not-null="true" length="100" />
      </property>
    </properties>

    <property name="cid" type="integer">
      <column name="CID" index="EAM_SUBJECT_CID_IDX" not-null="false" />
    </property>

    <property name="sortName" type="string">
      <column name="SORT_NAME" not-null="false" length="100"/>
    </property>

    <property name="firstName" type="string">
      <column name="FIRST_NAME" length="100"/>
    </property>

    <property name="lastName" type="string">
      <column name="LAST_NAME" length="100"/>
    </property>

    <property name="emailAddress" type="string">
      <column name="EMAIL_ADDRESS" length="100"/>
    </property>

    <property name="SMSAddress" type="string">
      <column name="SMS_ADDRESS" length="100"/>
    </property>

    <property name="phoneNumber" type="string">
      <column name="PHONE_NUMBER" length="100"/>
    </property>

    <property name="department" type="string">
      <column name="DEPARTMENT" length="100"/>
    </property>

    <property name="active" type="boolean">
      <column name="FACTIVE" not-null="false" />
    </property>

    <property name="system" type="boolean">
      <column name="FSYSTEM" not-null="false" />
    </property>

    <many-to-one name="resource" class="Resource">
      <column name="RESOURCE_ID" index="EAM_SUBJECT_RESOURCE_KEY" />
    </many-to-one>

    <set name="roles" table="EAM_SUBJECT_ROLE_MAP">
      <key column="SUBJECT_ID" />
      <many-to-many class="Role" column="ROLE_ID" />
    </set>

    <bag name="userConfigs" table="EAM_USER_CONFIG_RESP"
         cascade="save-update,delete,evict,persist,merge,all-delete-orphan"
         inverse="true">
      <key column="ID" />
      <one-to-many class="UserConfigResp" />
    </bag>
  </class>

  <class name="AuthzSubjRoleMap" table="EAM_SUBJECT_ROLE_MAP">
    <composite-id name="id" class="AuthzSubjRoleMapId">
      <key-many-to-one name="role" class="Role">
        <column name="ROLE_ID" not-null="true" />
      </key-many-to-one>

      <key-many-to-one name="subject" class="AuthzSubject">
        <column name="SUBJECT_ID" not-null="true" />
      </key-many-to-one>
    </composite-id>

    <property name="cid" type="integer">
      <column name="CID" index="EAM_SUBJ_ROLE_MAP_CID_IDX" />
    </property>
  </class>

</hibernate-mapping>
