<?xml version="1.0" encoding="iso-8859-1"?>

<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hyperic.hq.hqu.server.session">
  <class name="UIPlugin" table="EAM_UI_PLUGIN">

    <cache usage="read-write" />

    <id name="id" type="integer">
      <meta attribute="scope-set">private</meta>
      <column name="ID" not-null="true" />
      <generator class="org.hyperic.hibernate.id.ComboGenerator">
        <param name="sequence">EAM_UI_PLUGIN_ID_SEQ</param>
      </generator>
    </id>

    <version name="_version_" type="long">
      <column name ="VERSION_COL" default="0" />
    </version>

    <property name="name" type="string">
      <column name="NAME" not-null="true" length="100" unique="true" />
    </property>

    <property name="pluginVersion" type="string">
      <column name="PLUGIN_VERSION" not-null="true" length="30" />
    </property>
    
    <bag name="viewsBag" table="EAM_UI_PLUGIN_VIEW" cascade="all-delete-orphan"
         lazy="false" inverse="true">
      <key column="UI_PLUGIN_ID" />
      <one-to-many class="View"/>
    </bag>
    
  </class>

</hibernate-mapping>
