<?xml version="1.0" encoding="UTF-8"?>
<Covalent.DBSetup name="auth-schema.xml">

    <table name="EAM_PRINCIPAL">

        <column name="ID" default="sequence-only" initial="10001"
                primarykey="true" required="true" type="INTEGER"/>
        <column name="PRINCIPAL" required="true" type="VARCHAR2" size="64"/>
        <column name="PASSWORD" required="true" type="VARCHAR2" size="64"/>

        <!-- ensure that principals are unique -->
        <index name="EAM_PRINCIPAL_PRINCIPAL_KEY" unique="true">
            <field ref="PRINCIPAL" />
        </index>
    
    </table>
    
</Covalent.DBSetup>
