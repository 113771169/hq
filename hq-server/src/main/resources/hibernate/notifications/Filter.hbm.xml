<hibernate-mapping package="org.hyperic.hq.notifications.filtering">

  <class name="Filter" table="EAM_NOTIFICATIONS_FILTER">
    <cache usage="read-write"/>
    <id name="id" type="integer">
      <column name="ID" not-null="true"/>
      <generator class="org.hyperic.hibernate.id.ComboGenerator">
        <param name="sequence">EAM_FILTER_ID_SEQ</param>
      </generator>
    </id>

	<discriminator column="FILTER_TYPE" type="string"/>

    <version name="_version_" type="long">
      <column name="VERSION_COL" default="0"/>
    </version>
    
    <property name="regID" type="long">
      <column name="REGISTRATION_ID" not-null="true" unique="false"/>
    </property>

    <one-to-one name="cond" class="org.hyperic.hq.notifications.filtering.FilteringCondition"/>

    <subclass name="MetricFilter" discriminator-value="METRIC_FILTER">
    </subclass>
    <subclass name="MetricFilterByResource" discriminator-value="METRIC_FILTER_BY_RESOURCE">
    </subclass>
    <subclass name="ResourceContentFilter" discriminator-value="RESOURCE_CONTENT_FILTER">
    	<join table="EAM_NOTIFICATIONS_CONTENT_FILTER">
		    <key on-delete="cascade" column="FILTER_ID"/>
	        <property name="resourceDetailsType" type="string">
    			<column name="RESOURCE_DETAILS_TYPE" not-null="true" length="8" unique="false"/>
    		</property>
    	</join>
    </subclass>
  </class>
</hibernate-mapping>
